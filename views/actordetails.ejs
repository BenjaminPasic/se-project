<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
      defer
    ></script>
    <script src="/public/js/actordetails.js" defer></script>
    <title>Actor Details</title>
  </head>
  <body>
    <%-include('./partials/navbar.ejs') %>

    <!--Main Content-->
    <h2
      id="actor-name"
      data-actor-id="<%= actorDetails[0].id %> "
      class="text-center mt-4"
    >
      <%= actorDetails[0].fullname %>
    </h2>
    <div class="container mt-4 d-flex justify-content-center">
      <img
        src="../public/img/willsmith.jpg"
        alt="Will Smith Placeholder img"
        class="img-fluid mx-auto w-25 h-25"
      />
    </div>

    <div class="container mt-5 mb-5 d-flex justify-content-center flex-column">
      <div class="bg-light shadow p-2">
        <h4 class="border-bottom" style="width: fit-content">Date Of Birth</h4>
        <p id="actor-birth-year"><%= actorDetails[0].dateOfBirth %></p>
      </div>
      <div class="bg-light shadow p-2 mt-4">
        <h4 class="border-bottom" style="width: fit-content">About</h4>
        <p id="actor-about"><%= actorDetails[0].about %></p>
      </div>
      <div class="bg-light shadow p-2 mt-4">
        <h4 class="border-bottom" style="width: fit-content">Place of Birth</h4>
        <p id="actor-place-of-birth"><%= actorDetails[0].placeOfBirth%></p>
      </div>

      <% if(isEditor){ %>
      <div class="d-flex justify-content-around mt-3">
        <button
          data-bs-toggle="modal"
          data-bs-target="#deleteModal"
          class="btn btn-danger w-25"
        >
          Delete
        </button>
        <button
          id="open-edit-modal"
          data-bs-toggle="modal"
          data-bs-target="#editModal"
          class="btn btn-warning w-25"
        >
          Edit
        </button>
      </div>
      <% } %>
    </div>

    <!-- Delete Modal -->
    <div
      class="modal fade"
      id="deleteModal"
      tabindex="-1"
      aria-labelledby="deleteModal"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModal">Confirm</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
              X
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this actor?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button id="delete-button" type="button" class="btn btn-primary">
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <!--Edit Modal-->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModal"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModal">Confirm</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
              X
            </button>
          </div>
          <div class="modal-body">
            <h5 class="text-center">Edit fields</h5>
            <div class="d-flex flex-column">
              <div class="mt-3">
                <label for="actor-name">Edit Actor Name</label><br />
                <input id="actor-name-edit" type="text" />
              </div>
              <div class="mt-3">
                <label for="actor-birth-year">Edit Birth Year</label><br />
                <input type="date" id="actor-birth-year-edit"></input>
              </div>
              <div class="mt-3">
                <label for="actor-about">Edit About</label><br />
                <textarea id="actor-about-edit" cols="50" rows="5"></textarea>
              </div>
              <div class="mt-3">
                <label for="review">Edit Place of Birth</label><br />
                <input id="actor-place-of-birth-edit" type="text" />
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button id="edit-button" type="button" class="btn btn-primary">
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
